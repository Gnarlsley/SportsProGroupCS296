@model Customer

@{
    string title = ViewBag.Action + " Customer";
    ViewBag.Title = title;
}

<h2>@ViewBag.Title</h2>

<form asp-action="Edit" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="FirstName">First Name</label>
        <input asp-for="FirstName" class="form-control">
    </div>

    <div class="form-group">
        <label asp-for="LastName">Last Name</label>
        <input asp-for="LastName" class="form-control">
    </div>

    <div class="form-group">
        <label asp-for="Address">Address</label>
        <input asp-for="Address" class="form-control">
    </div>

    <div class="form-group">
        <label asp-for="City">City</label>
        <input asp-for="City" class="form-control">
    </div>

    <div class="form-group">
        <label asp-for="State">State</label>
        <input asp-for="State" class="form-control">
    </div>

    <div class="form-group">
        <label asp-for="PostalCode">Postal Code</label>
        <input asp-for="PostalCode" class="form-control">
    </div>

    <!--Make list box-->
    <div class="form-group">
        <label asp-for="Country">Country</label>
        <input asp-for="Country" class="form-control">
    </div>

    <!--Make optional-->
    <div class="form-group">
        <label asp-for="Email">Email</label>
        <input asp-for="Email" class="form-control">
    </div>

    <!--Make optional-->
    <div class="form-group">
        <label asp-for="Phone">Phone Number</label>
        <input asp-for="Phone" class="form-control">
    </div>

    <div class="mt-2">
        <button type="submit" class="btn btn-primary">@ViewBag.Action</button>
        <a asp-controller="Customer" asp-action="List" class="btn btn-primary">Cancel</a>
    </div>
 
</form>