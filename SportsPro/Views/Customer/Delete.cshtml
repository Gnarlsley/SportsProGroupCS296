@model Customer 

@{
    ViewBag.Title = "Delete Customer";
}

<h2>@ViewBag.Title</h2>

<form asp-action="Delete" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>

    <p>Are you sure you want to delete this customer?</p>

    <div class="form-group">
        <label asp-for="FullName">Name</label>
        <input asp-for="FullName" class="form-control" readonly>
    </div>

    <div class="form-group">
        <label asp-for="Email">Email</label>
        <input asp-for="Email" class="form-control" readonly>
    </div>

    <div class="form-group">
        <label asp-for="City">City</label>
        <input asp-for="City" class="form-control" readonly>
    </div>

    <div class="mt-2">
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-controller="Product" asp-action="List" class="btn btn-primary">Cancel</a>
    </div>

</form>
