@model Product 

@{
    ViewBag.Title = "Delete Product";
}

<h2>@ViewBag.Title</h2>

<form asp-action="Delete" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>

    <p>Are you sure you want to delete this product?</p>

    <div class="form-group mb-3">
        <label asp-for="ProductCode">Code</label>
        <input asp-for="ProductCode" class="form-control mt-1" readonly>
    </div>

    <div class="form-group mb-3">
        <label asp-for="Name">Name</label>
        <input asp-for="Name" class="form-control mt-1" readonly>
    </div>

    <div class="form-group mb-3">
        <label asp-for="YearlyPrice">Price</label>
        <input asp-for="YearlyPrice" class="form-control mt-1" readonly>
    </div>

    <div class="form-group mb-3">
        <label asp-for="ReleaseDate">Realease Date</label>
        <input asp-for="ReleaseDate" class="form-control mt-1" readonly>
    </div>

    <div class="mt-2">
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-controller="Product" asp-action="List" class="btn btn-primary">Cancel</a>
    </div>

</form>
