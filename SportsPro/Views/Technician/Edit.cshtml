@model Technician

@{
    string title = ViewBag.Action == "Add" ? "Add Technician" : "Edit Technician";
    ViewBag.Title = title;
}

<h2>@ViewBag.Title</h2>

<form asp-action="Edit" method="post">

<!-- **FOR DEBUGGING**
    <div class="form-group">
        <label asp-for="TechnicianID">Code</label>
        <input asp-for="TechnicianID" class="form-control" readonly>
        </div>
--->
    <span asp-validation-for="Name" class="text-danger"></span>
    <div class="form-group mb-3">
        <label asp-for="Name">Name</label>
        <input asp-for="Name" class="form-control mt-1">
    </div>

    <span asp-validation-for="Email" class="text-danger"></span>
    <div class="form-group mb-3">
        <label asp-for="Email">Email</label>
        <input asp-for="Email" class="form-control mt-1">
    </div>

    <span asp-validation-for="Phone" class="text-danger"></span>
    <div class="form-group mb-3">
        <label asp-for="Phone">Phone Number</label>
        <input asp-for="Phone" class="form-control mt-1">
    </div>

    <div class="mt-3">
        <button type="submit" class="btn btn-primary mt-1">Save</button>
        <a asp-controller="Technician" asp-action="List" class="btn btn-primary mt-1">Cancel</a>
    </div>

</form>