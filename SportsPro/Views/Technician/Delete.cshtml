@model Technician

@{
    ViewBag.Title = "Delete Technician";
}

<h2>@ViewBag.Title</h2>

<form asp-action="Delete" method="post">

    <p>Are you sure you want to delete this Technicican?</p>

    <div class="form-group mb-3">
        <label asp-for="Name">Name</label>
        <input asp-for="Name" class="form-control mt-1" readonly>
    </div>

    <div class="form-group mb-3">
        <label asp-for="Email">Email</label>
        <input asp-for="Email" class="form-control mt-1" readonly>
    </div>

    <div class="form-group mb-3">
        <label asp-for="Phone">Phone</label>
        <input asp-for="Phone" class="form-control mt-1" readonly>
    </div>

    <div class="mt-2">
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-controller="Technician" asp-action="List" class="btn btn-primary">Cancel</a>
    </div>

</form>
